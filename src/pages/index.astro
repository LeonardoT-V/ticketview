---
import Layout from '../layouts/Layout.astro';
import { SUGGEST } from '../../prueba';

const res= await fetch('https://app.ticketmaster.com/discovery/v2/suggest?apikey=ubvsB7JzYwGyAJ42JVdm1QdDszow132e&size=5')
const jij = await res.json()
const {_embedded:data} = jij
const places = [{name:'sofi stadium', url:'https://i0.wp.com/lanoticia.com/wp-content/uploads/2022/02/SoFI-Stadium-pantalla-Super-Bowl.jpg?fit=840%2C560&ssl=1'},{name:'Kia Forum', url:'https://apicms.thestar.com.my/uploads/images/2023/09/29/2268839.jpeg'},{name:'sofi stadium', url:'/ss.png'},{name:'Sphere', url:'https://static.theclinic.cl/media/2023/11/03-025631_on7v_2023-10-02-sphere-fury.jpeg'}]
---

<Layout title="Welcome to Astro.">

	<section class="relative w-full h-screen mb-32 p-4 md:p-32 md:py-16 md:pb-32 flex gap-16">
		<div class="flex flex-col gap-4 h-full w-2/3 py-8 mb-0 my-auto ">
			<h1 class="text-6xl md:text-7xl lg:text-8xl text-balance">Live you next memorable day</h1>
			<p>Find</p>
		</div>
		<div class="grid grid-cols-2 gap-4 w-1/3 items-center align-middle justify-center">
			<div class="last:hidden lg:last:flex rounded-lg relative aspect-video p-4 group overflow-hidden flex flex-col justify-end w-full h-full col-span-2"
			>
				<img src="https://uk.tmconst.com/ccp-salesforce-images/ES/ed-sheeran-25-2fecha-720x405.jpg?auto=webp" alt="asd" class="transition-all group-hover:scale-125 group-hover:brightness-50 brightness-75 group-hover:blur-sm -z-10 h-full w-full object-cover rounded-lg absolute top-0 left-0"/>
			</div>
			<div class="last:hidden lg:last:flex rounded-lg relative aspect-video p-4 group overflow-hidden flex flex-col justify-end w-full h-full"
			>
				<img src="https://uk.tmconst.com/ccp-salesforce-images/ES/ed-sheeran-25-2fecha-720x405.jpg?auto=webp" alt="asd" class="transition-all group-hover:scale-125 group-hover:brightness-50 brightness-75 group-hover:blur-sm -z-10 h-full w-full object-cover rounded-lg absolute top-0 left-0"/>
			</div>
			<div class="last:hidden lg:last:flex rounded-lg relative aspect-video p-4 group overflow-hidden flex flex-col justify-end w-full h-full"
			>
				<img src="https://uk.tmconst.com/ccp-salesforce-images/ES/ed-sheeran-25-2fecha-720x405.jpg?auto=webp" alt="asd" class="transition-all group-hover:scale-125 group-hover:brightness-50 brightness-75 group-hover:blur-sm -z-10 h-full w-full object-cover rounded-lg absolute top-0 left-0"/>
			</div>
		</div>
		<img style="mask-image:linear-gradient(#000 40%, #0000 100%)" class="-z-50 absolute top-0 left-0 object-cover w-full h-full brightness-50" src="https://images.unsplash.com/photo-1470229722913-7c0e2dbbafd3?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8Y29uY2VydHxlbnwwfHwwfHx8MA%3D%3D" alt="">
	</section>

	<section class="container mx-auto relative mb-32">
		<header>
			<h2 class="text-6xl tracking-widest font-thin">Next Events</h2>
		</header>
		<main class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 ">
			<a href="/#" class="bg-amber-300 p-4 rounded-md flex flex-col lg:flex-row lg:gap-4 items-center col-span-1 md:col-span-2 lg:col-span-2 lg:row-span-2 group">
				<img src="/coliseum.png" alt="coliseum icon" class="w-48 md:w-64 lg:w-72 xl:w-96 -skew-y-3 drop-shadow-2xl group-hover:scale-110 transition-all"/>
				<div class="text-center group-hover:scale-105 transition-all">
					<p class="text-4xl lg:text-7xl font-bold text-amber-900 text-center lg:text-left">Greatest Events</p>
					<p class="text-sm md:text-lg text-black/60 mb-4 lg:mb-8 text-center lg:text-left">Find events and filter your search by location, date, availability, and much more.</p>
					<button class="bg-black/90 hover:bg-black/80 text-white px-24 py-2.5 text-sm md:text-lg rounded-lg font-medium hover:scale-105 transition-all">See All</button>
				</div>
			</a>
			{data.events.map(attr => (
			<div class="last:hidden lg:last:flex rounded-lg relative aspect-video group overflow-hidden flex flex-col justify-end"
			>
				<div class="text-right w-full backdrop-blur-sm p-4">
					<h2 class="text-lg line-clamp-1 font-medium text-balance">{attr.name}</h2>
					<p class="text-sm line-clamp-1">{attr.dates.start.dateTime}</p>
				</div>
				<img src={attr.images[1].url} alt="asd" class="transition-all group-hover:scale-125 group-hover:brightness-50 brightness-75 group-hover:blur-sm -z-10 h-full object-cover rounded-lg absolute top-0 left-0 w-full"/>
			</div>
			))}
		</main>
	</section>

	<section class="container mx-auto relative mb-32">
		<header>
			<h2 class="text-6xl tracking-widest font-thin">View Venues</h2>
		</header>
		<main class="grid grid-cols-2 lg:grid-cols-3 gap-4 w-full">
			{places.map((attr,id) => (
				<div id={`venue-grid-${id+1}`} class="w-full">
			<div class="rounded-lg relative aspect-video group overflow-hidden flex flex-col justify-end w-full"
			>
				<div class="text-right w-full p-4 backdrop-blur-sm">
					<h2 class="text-4xl font-medium text-balance">{attr.name}</h2>
					{/* <p class="text-sm">{attr.dates.start.dateTime}</p> */}
				</div>

				{/* {attr.images[0].url ? <img src={attr.images[0].url} alt="asd" class="transition-all group-hover:scale-125 group-hover:brightness-50 brightness-75 group-hover:blur-sm -z-10 h-full object-cover rounded-lg absolute top-0 left-0"/> :''} */}
				<img src={attr.url} alt="asd" class="transition-all w-full group-hover:scale-125 group-hover:brightness-50 brightness-75 group-hover:blur-sm -z-10 h-full rounded-lg absolute top-0 left-0 object-cover object-center"/>
			</div>
		</div>
			))}
			<div class="bg-sky-200 w-full rounded-md row-span-2 col-start-2 col-end-3 row-start-1 row-end-4 lg:row-end-3 flex flex-col justify-between overflow-hidden group aspect-[16/9] text-center h-full">
				<div class="group-hover:scale-105 transition-all text-center p-4 md:p-8">
					<p class="text-4xl xl:text-6xl text-black/90 font-bold text-sky-900 mb-4 lg:mb-0">A lot of places</p>
					<p class="text-sm md:text-lg text-black/60 mb-4 ">Find events and filter your search by location, date, availability, and much more.</p>
					<button class="bg-black/90 hover:bg-black/80 text-white px-4 lg:px-24 py-2.5 text-sm md:text-lg rounded-lg font-medium hover:scale-105 transition-all">See All</button>
				</div>
				<img src="/ss.png" alt="" class="rounded-b-md transition-all group-hover:scale-105 drop-shadow-2xl">
			</div>
		</main>
	</section>

</Layout>

<style>
	#venue-grid-1,#venue-grid-2 { @apply p-0 }
	#venue-grid-3 { @apply p-0 hidden }
	@media screen(lg) {
		#venue-grid-1,#venue-grid-2 { @apply pt-4 }
		#venue-grid-3,#venue-grid-4 {	@apply block pb-4	}
	}
</style>